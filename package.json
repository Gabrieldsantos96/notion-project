{
  "name": "boilerplate-node",
  "version": "1.0.0",
  "main": "index.js",
  "author": "gsantos <gabrieltemp.mobile@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "14.x"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@babel/register": "^7.18.9",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@shelf/jest-mongodb": "1.1.3",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.2.4",
    "@types/mongodb": "3.3.14",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fast-glob": "^3.2.12",
    "husky": "8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "2.8.2",
    "ts-jest": "^29.0.3",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "build": "babel src --out-dir lib --copy-files --extensions '.ts,.js'",
    "start": "ts-node-dev -r tsconfig-paths/register --respawn --ignore-watch node_modules src/main/server.ts",
    "prepare": "husky install",
    "lint": "eslint src --max-warnings=0",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "yarn test --watch -c jest-unit-config.ts",
    "test:integration": "yarn test --watch -c jest-integration-config.ts",
    "test:staged": "yarn test --findRelatedTests --bail ./src/**/*",
    "test:ci": "yarn test --coverage"
  },
  "lint-staged": {
    "src/**/*": [
      "yarn lint --fix",
      "yarn test:staged"
    ]
  },
  "dependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/runtime": "^7.20.13",
    "express": "^4.18.2",
    "firebase": "^9.17.1",
    "mongodb": "3.5.7"
  }
}
